{
  "name": "skeletor",
  "version": "0.0.1",
  "main": "index.js",
  "repository": "https://github.com/xdmorgan/skeletor.git",
  "author": "Dan Morgan",
  "license": "MIT",
  "scripts": {
    "start": "node-sass-chokidar -w src -o dist --source-map true --output-style compact",
    "build": "yarn sass:compile && yarn sass:compress",
    "sass:compile": "node-sass-chokidar src/skeletor.scss dist/skeletor.min.css --source-map true --output-style compressed",
    "sass:compress": "gzip -k dist/skeletor.min.css",
    "lint": "stylelint 'src/**/*.scss'",
    "config:yaml-json": "yaml2json config.yml --pretty --save",
    "config:json-sass": "json-sass -i config.json -o config.scss -p \"\\$skeletor: \""
  },
  "devDependencies": {
    "node-sass": "^4.9.3",
    "node-sass-chokidar": "^1.3.3",
    "stylelint": "^9.5.0",
    "stylelint-config-recommended-scss": "^3.2.0",
    "stylelint-scss": "^3.3.1"
  },
  "dependencies": {
    "json-sass": "^1.3.5",
    "yamljs": "^0.3.0"
  }
}

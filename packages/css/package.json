{
  "name": "@skeletor/css",
  "version": "0.2.1",
  "description": "CSS generator",
  "main": "index.js",
  "directories": {
    "doc": "docs"
  },
  "bin": {
    "skeletor": "./cli/index.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/xdmorgan/skeletor.git"
  },
  "author": "Dan Morgan",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/xdmorgan/skeletor/issues"
  },
  "homepage": "https://github.com/xdmorgan/skeletor/tree/master/packages/css#readme",
  "scripts": {
    "clean": "rimraf ./dist",
    "start": "yarn clean && yarn sass:watch",
    "build": "yarn clean && yarn lint && yarn sass:compile && yarn sass:compress",
    "cli": "node cli",
    "lint": "stylelint 'src/**/*.scss'",
    "sass:watch": "node-sass-chokidar -w src -o dist --source-map true --output-style compact",
    "sass:compile": "node-sass-chokidar src/skeletor.scss dist/skeletor.css --source-map true --output-style compact",
    "sass:compress": "node-sass-chokidar src/skeletor.scss dist/skeletor.min.css --source-map true --output-style compressed && gzip -k dist/skeletor.min.css",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "devDependencies": {
    "node-sass": "^4.9.3",
    "node-sass-chokidar": "^1.4.0",
    "rimraf": "^3.0.0",
    "stylelint": "^12.0.0",
    "stylelint-config-recommended-scss": "^4.1.0",
    "stylelint-scss": "^3.13.0"
  },
  "dependencies": {
    "cross-spawn": "^7.0.1",
    "fs-extra": "^8.1.0",
    "json-sass": "^1.3.5",
    "meow": "^6.0.0",
    "yamljs": "^0.3.0"
  }
}

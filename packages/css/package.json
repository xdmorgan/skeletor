{
  "name": "@skeletor/css",
  "version": "0.1.1",
  "description": "CSS generator",
  "main": "index.js",
  "directories": {
    "doc": "docs"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/xdmorgan/skeletor.git"
  },
  "author": "Dan Morgan",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/xdmorgan/skeletor/issues"
  },
  "homepage": "https://github.com/xdmorgan/skeletor#readme",
  "scripts": {
    "clean": "rimraf ./public/dist",
    "start": "yarn clean && yarn cli && yarn sass:watch",
    "build": "yarn clean && yarn cli && yarn lint && yarn sass:compile && yarn sass:compress",
    "cli": "node cli",
    "lint": "stylelint 'src/**/*.scss'",
    "sass:watch": "node-sass-chokidar -w src -o public/dist --source-map true --output-style compact",
    "sass:compile": "node-sass-chokidar src/skeletor.scss public/dist/skeletor.css --source-map true --output-style compact",
    "sass:compress": "node-sass-chokidar src/skeletor.scss public/dist/skeletor.min.css --source-map true --output-style compressed && gzip -k public/dist/skeletor.min.css",
    "test": "echo \"Error: no test specified\" && exit 1",
    "serve:build": "http-server ./public --gzip -o prod.html",
    "serve:dev": "http-server ./public",
    "preview": "yarn build && yarn serve:build"
  },
  "devDependencies": {
    "http-server": "^0.12.0",
    "node-sass": "^4.9.3",
    "node-sass-chokidar": "^1.4.0",
    "rimraf": "^3.0.0",
    "stylelint": "^12.0.0",
    "stylelint-config-recommended-scss": "^4.1.0",
    "stylelint-scss": "^3.13.0"
  },
  "dependencies": {
    "fs-extra": "^8.1.0",
    "json-sass": "^1.3.5",
    "yamljs": "^0.3.0"
  }
}
